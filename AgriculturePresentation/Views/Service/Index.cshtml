@using EntityLayer.Entities
@model List<Service>
@{
   ViewData["Title"] = "Index";
   Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h3>Hizmetler </h3>

<table class="table table-bordered my-5 " >
   <thead>
      <tr>
         <th >ID</th>
         <th>Başlık</th>
         <th>Açıklama</th>
         <th></th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model)
      {
         <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class=" btn btn-danger ">Sil</a></td>
            <td><a href="/Service/EditService/@item.ServiceID" class=" btn btn-success ">Güncelle</a></td>
         </tr>
      }

   </tbody>
</table>
<a href="/Service/AddService" class=" btn btn-info w-100">Yeni Hizmet Girişi</a>