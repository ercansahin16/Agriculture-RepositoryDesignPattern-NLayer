@using EntityLayer.Entities
@model List<Adress>
@{
    ViewData["Title"] = "Index";
   Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h3>Adres Bilgisi</h3>

<div class="col-lg-12 grid-margin stretch-card">
   <div class="card">
      <div class="card-body">

         <div class="table-responsive">
            <table class="table table-striped">
               <thead>
                  <tr>
                 
                   
                     <th> Açıklama-1</th>
                     <th> Açıklama-2</th>
                     <th> Açıklama-3</th>
                     <th> Açıklama-4</th>
                     <th> </th>
                   
                  </tr>
               </thead>
               <tbody>
                  @{
                     int count = 0;
                  }
                  @foreach (var item in Model)
                  {
                     count++;
                     <tr>

                        <td class="py-1">@item.Description1   </td>
                        <td class="py-1">@item.Description2 </td>
                        <td> @item.Description3 </td>
                        <td> @item.Description4</td>
                        <td><a href="/Address/EditAddress/@item.AdressID" class=" btn btn-success ">Güncelle</a></td>

                     </tr>
                  }
                  @{
                     if (count == 0)
                     {
                     <td id="Dsp" colspan="6" style="display:table-cell; text-align:center">Hiç Personel yok</td>

                     }
                  }
               </tbody>
            </table>
            <a asp-action="EditAddress" asp-controller="Address" class="btn btn-info w-100 my-3">Yeni Adres Girişi</a>
         </div>
      </div>
   </div>
</div>