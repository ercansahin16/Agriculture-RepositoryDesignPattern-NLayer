@using EntityLayer.Entities
@model List<Contact>
@{
   ViewData["Title"] = "Index";
 
   Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h1>Mesajlar</h1>

<div class="col-lg-12 grid-margin stretch-card">
   <div class="card">
      <div class="card-body">


         <div class="table-responsive">
            <table class="table table-striped">
               <thead>
                  <tr>

                     <th> # </th>
                     <th>Ad Soyad</th>
                     <th>Mail</th>
                     <th>Tarih</th>
                     <th></th>
                     <th>   </th>
                  </tr>
               </thead>
               <tbody>
                  @{
                     int count = 0;
                  }
                  @foreach (var item in Model)
                  {
                     count++;
                     <tr>

                        <td class="py-1"> @item.ContactID </td>
                        <td class="py-1">@item.Name </td>
                        <td> @item.Date.ToString("dd.MM.yyyy") </td>
                        <td><a href="/Contact/DetailsMessage/@item.ContactID" class=" btn btn-success ">Mesajı Gör</a></td>

                     </tr>
                  }
                  @{
                     if (count == 0)
                     {
                     <td id="Dsp" colspan="6" style="display:table-cell; text-align:center">Hiç Mesaj yok</td>

                     }
                  }
               </tbody>
            </table>
         
         </div>
      </div>
   </div>
</div>