@model EntityLayer.Entities.Admin
@{
    ViewData["Title"] = "EditAdmin";
    Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h3>Admin Bilgilerini Güncelle</h3>

<form method="post">
   @Html.HiddenFor(x => x.AdminID)
   <div class=" form-group">
      @Html.Label("Kullanıcı Adı");
      <input type="text" asp-for="UserName" class="form-control" />
   </div>
   <div class=" form-group">
      @Html.Label("Şifre");
      <input asp-for="Password" class="form-control"></input>

   </div>
  

   <button class=" btn btn-info w-100 my-3">Değişiklikleri Kaydet</button>
</form>