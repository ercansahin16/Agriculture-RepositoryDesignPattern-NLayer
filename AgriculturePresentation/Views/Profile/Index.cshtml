@model AgriculturePresentation.Models.UserEditViewMode
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}


<h3>Profil Düzenleme </h3>

<form method="post">
   <div class=" form-group">
      @Html.Label("Mail Adresi");
