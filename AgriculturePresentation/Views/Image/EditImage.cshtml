@model EntityLayer.Entities.Image
@{
    ViewData["Title"] = "EditImage";
   Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h3>Görsel Güncelleme</h3>

<form method="post">
   @Html.HiddenFor(x => x.ImageId)
   <div class=" form-group">
      @Html.Label("Başlık");
      <input type="text" asp-for="Title" class="form-control" />
   </div>
   <div class=" form-group">
      @Html.Label("İçerik");
<textarea asp-for="Description" class="form-control"></textarea>

   </div>
   <div class=" form-group">
      @Html.Label("Resim URL");
      <input type="text" asp-for="ImageUrl" class="form-control" />
   </div>
  
   <button class=" btn btn-info w-100 my-3">Değişiklikleri Kaydet</button>
   </form>