@using EntityLayer.Entities
@model List<Image>
@{
    ViewData["Title"] = "Index";
   Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h3>Görseller </h3>


<div class="col-lg-12 grid-margin stretch-card">
   <div class="card">
      <div class="card-body">
        
        
         <div class="table-responsive">
            <table class="table table-striped">
               <thead>
                  <tr>
                     <th> # </th>
                     <th> Başlık </th>
                     <th >   </th>
                    
                  </tr>
               </thead>
               <tbody>
                  @foreach (var item in Model)
                  {
                     
                  
                  <tr>
                     <td class="py-1">  <img src="@item.ImageUrl" alt="image"  style="border-radius:20px;width:150px"/> </td>
                     <td >@item.Title</td>
                        <td><a href="/Image/DeleteImage/@item.ImageId" class=" btn btn-danger ">Sil</a></td>
                        <td><a href="/Image/EditImage/@item.ImageId" class=" btn btn-success ">Güncelle</a></td>
                  </tr>
                 
                  }
               </tbody>
            </table>
            <br /><br />
            <a href="/Image/AddImage" class=" btn btn-info w-100">Yeni Görsel Ekle</a>
         </div>
      </div>
   </div>
</div>